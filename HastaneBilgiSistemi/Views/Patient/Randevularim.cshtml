@model IEnumerable<HastaneBilgiSistemi.Models.Hastalar>
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout3.cshtml";
}

<div class="container">
    <h3>Mevcut Randevularım</h3>
    <table>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Bölüm</th>
            <th>Doktor Adı Soyadı</th>
            <th>Teşhis</th>
            <th>İlaçlar</th>
            <th></th>
        </tr>
        
        @{
            if (Model != null)
            {
                foreach (var Data in Model)
                {
                <tr>
                    <td>@Data.Ad</td>
                    <td>@Data.Soyad</td>
                    <td>@Data.Bolum</td>
                    <td>@Data.DoktorAd @Data.DoktorSoyad</td>
                    <td>@Data.Teshis</td>
                    <td>@Data.Ilaclar</td>
                    <td>
                        <a asp-action="RandevuEkle" asp-route-id="@Data.Id"><button class="btn btn-secondary btn-block" type="button">Düzenle</button></a>
                        <a asp-action="Delete" asp-route-id="@Data.Id"><button class="btn btn-danger btn-block" type="button">Sil</button></a>
                    </td>
                </tr>
                }

            }
        }
    </table>


</div>
